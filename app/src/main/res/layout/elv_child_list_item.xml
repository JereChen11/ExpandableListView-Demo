<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/ivChildIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_list_service"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/tvChildName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/ivChildIcon"
        android:maxLines="3"
        android:text="child item name"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivChildSelectIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_list_unselect"/>

</RelativeLayout>